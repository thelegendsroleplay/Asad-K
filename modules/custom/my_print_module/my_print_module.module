<?php

/**
 * Implements hook_preprocess_HOOK().
 */
function my_print_module_preprocess_node(&$variables)
{
    $node = $variables['node'] ?? NULL;

    // Add print button for specific content types.
    if ($node && in_array($node->bundle(), ['partners_agreement', 'page'])) {
        $variables['print_button'] = '<a href="/node/' . $node->id() . '/print" class="btn btn-primary no-print">Print</a>';
    }
}
